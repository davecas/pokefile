.evolutions
	margin-bottom 1em
	.title
		padding 0.5em 0em
		border-bottom 1px solid separator
		span
			font-size 1.5em
	.evolution_item
		margin-top 20px
		.pokemon_object
			width 230px
			height 250px
			border 1px solid transparent
			&:hover
				cursor pointer
				border 1px solid rojo
				border-radius 4px
			&:active
				border 1px solid rgba(separator, 0.8)
				border-radius 4px
				opacity 0.7
			figure
				margin 0
				padding 1em 0em
				width 200px
				height 200px
				img
					width 200px
					height 200px
			.evolution_name
				padding 1em 0em
				color rojo
				